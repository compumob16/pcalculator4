<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.compumob.pcal.Pcal"
    tools:showIn="@layout/activity_pcal"
    android:textAlignment="center"
    android:background="#faf7f7">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="numberDecimal"
        android:ems="6"
        android:id="@+id/percentageTxt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColorHighlight="#f70404"
        android:background="#fd0606"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="numberDecimal"
        android:ems="6"
        android:id="@+id/numberTxt"
        android:textAlignment="center"
        android:textColorHighlight="#f70404"
        android:background="#fd0606"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Percent %"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/percentageTxt"
        android:layout_alignRight="@+id/percentageTxt"
        android:layout_alignEnd="@+id/percentageTxt"
        android:textAlignment="textStart"
        android:textColor="#400b0e"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mark Price"
        android:id="@+id/textView3"
        android:textAlignment="textStart"
        android:textColor="#400b0e"
        android:textSize="20dp"
        android:layout_below="@+id/numberTxt"
        android:layout_alignLeft="@+id/numberTxt"
        android:layout_alignStart="@+id/numberTxt"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/numberTxt"
        android:layout_alignEnd="@+id/numberTxt" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boton"
        android:contentDescription="bot"
        android:onClick="onClick"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageButton" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Calculate:"
        android:id="@+id/calcBtn"
        android:textSize="15dp"
        android:background="#fd0606"
        android:layout_marginTop="40dp"
        android:textColor="#fbf6f6"
        android:layout_below="@+id/textView2"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/totaltextview"
        android:layout_toLeftOf="@+id/totaltextview" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/totaltextview"
        android:background="#fd0606"
        android:textAlignment="center"
        android:layout_alignTop="@+id/calcBtn"
        android:layout_alignRight="@+id/textView3"
        android:textColor="#faf7f7"
        android:password="false"
        android:textSize="40sp"
        android:layout_toEndOf="@+id/textView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_marginTop="32dp"
        android:background="@drawable/sale"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
